{
  "name": "hasura-next-ts-boilerplate",
  "version": "1.0.0",
  "description": "Next.js Typescript boilerplate with Hasura GraphQL backend",
  "main": "firebaseFunctions.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next src/",
    "serve": "npm run build && firebase emulators:start --only functions,hosting",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions:nextjsFunc,hosting",
    "build": "next build src/",
    "start": "next start src/",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck-app": "tsc --project src",
    "stylelint": "npx stylelint '**/*.css'",
    "test": "cypress run",
    "cy:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-next-ts-boilerplate.git"
  },
  "keywords": [
    "next.js",
    "hasura",
    "typescript",
    "boilerplate"
  ],
  "author": "Toan Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-next-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-next-ts-boilerplate#readme",
  "dependencies": {
    "@apollo/link-context": "^2.0.0-beta.3",
    "firebase": "^7.14.3",
    "line-awesome": "^1.3.0",
    "@apollo/client": "^3.0.0-rc.4",
    "@apollo/link-ws": "^2.0.0-beta.3",
    "@apollo/react-hooks": "^3.1.5",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.7.0",
    "graphql": "^15.1.0",
    "next": "^9.4.4",
    "next-redux-saga": "^4.1.2",
    "next-redux-wrapper": "^6.0.2",
    "next-with-apollo": "^5.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "subscriptions-transport-ws": "^0.9.16",
    "rosetta": "^1.0.1",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@redux-saga/simple-saga-monitor": "^1.1.2",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/yup": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "cypress": "^4.8.0",
    "cypress-react-unit-test": "^4.7.0",
    "eslint": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-react": "^7.20.0",
    "firebase-functions-test": "^0.2.1",
    "firebase-tools": "^8.4.2",
    "husky": "^4.2.5",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "stylelint": "^13.6.0",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^1.3.5",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build",
      "pre-push": "npm run build"
    }
  }
}
