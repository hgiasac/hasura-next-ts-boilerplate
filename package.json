{
  "name": "hasura-next-ts-boilerplate",
  "version": "1.0.0",
  "description": "Next.js Typescript boilerplate with Hasura GraphQL backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "next src/app",
    "preserve": "npm run build-public && npm run build-functions && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-app": "next build \"src/app\"",
    "build-public": "cpx \"src/app/public/**/*.*\" \"dist/public\" -C",
    "build-functions": "npm run lint-functions && tsc --project src/functions",
    "lint-app": "eslint -c src/app/.eslintrc --ext .ts,.tsx src/app",
    "typecheck-app": "tsc --project src/app",
    "lint-functions": "eslint -c src/functions/.eslintrc.js --ext .ts,.tsx src/functions",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && npm i",
    "stylelint": "npx stylelint '**/*.css'",
    "test": "cypress run",
    "cy:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-next-ts-boilerplate.git"
  },
  "keywords": [
    "next.js",
    "hasura",
    "typescript",
    "boilerplate"
  ],
  "author": "Toan Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-next-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-next-ts-boilerplate#readme",
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.44",
    "firebase": "^7.14.2",
    "firebase-admin": "^8.11.0",
    "graphql": "^15.0.0",
    "next": "^9.3.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "@apollo/link-ws": "^2.0.0-beta.3",
    "@apollo/react-hooks": "^3.1.5",
    "next-redux-saga": "^4.1.2",
    "next-redux-wrapper": "^6.0.0-rc.8",
    "next-with-apollo": "^5.0.1",
    "react-hook-form": "^5.5.3",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "rosetta": "^1.0.0",
    "yup": "^0.28.4"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@redux-saga/simple-saga-monitor": "^1.1.2",
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-redux": "^7.1.7",
    "@types/yup": "^0.28.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "cypress": "^4.5.0",
    "cypress-react-unit-test": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.19.0",
    "firebase-functions": "^3.6.1",
    "husky": "^4.2.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build-app && npm run build-functions"
    }
  }
}
