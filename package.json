{
  "name": "hasura-next-ts-boilerplate",
  "version": "1.0.0",
  "description": "Next.js Typescript boilerplate with Hasura GraphQL backend",
  "main": "dist/index.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next src/",
    "serve": "npm run build && firebase emulators:start --only functions,hosting",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions,hosting",
    "build": "next build src/",
    "start": "next start src/",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck-app": "tsc --project src",
    "stylelint": "npx stylelint '**/*.css'",
    "test": "cypress run",
    "cy:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-next-ts-boilerplate.git"
  },
  "keywords": [
    "next.js",
    "hasura",
    "typescript",
    "boilerplate"
  ],
  "author": "Toan Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-next-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-next-ts-boilerplate#readme",
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.44",
    "@apollo/link-ws": "^2.0.0-beta.3",
    "@apollo/react-hooks": "^3.1.5",
    "firebase-functions": "^3.6.1",
    "graphql": "^15.0.0",
    "next": "^9.3.6",
    "next-redux-saga": "^4.1.2",
    "next-redux-wrapper": "^6.0.0-rc.8",
    "next-with-apollo": "^5.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.6.3",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "rosetta": "^1.0.0",
    "yup": "^0.28.4"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@redux-saga/simple-saga-monitor": "^1.1.2",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-redux": "^7.1.8",
    "@types/yup": "^0.28.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "cypress": "^4.5.0",
    "cypress-react-unit-test": "^4.2.1",
    "eslint": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.19.0",
    "firebase-functions-test": "^0.2.1",
    "firebase-tools": "^8.2.0",
    "husky": "^4.2.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
